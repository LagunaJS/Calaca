<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns ="urn:nhibernate-mapping-2.2" >

  <class name ="Calaca.Nucleo.Entidades.Usuario,Calaca.Nucleo" table ="usuario" lazy="false">

  <!--Se mapea el id de la clase con el id de la base de datos que en este caso es el column name = id-->
    <id name="Id" type="int">
      <column name ="id" />
      <generator class ="identity" />
    </id>


    <property name="Nombre" type="string">
      <column name="nombre" />
    </property>

    <property name="Correo" type="string">
      <column name="correo" />
    </property>
    
  </class>
</hibernate-mapping>
